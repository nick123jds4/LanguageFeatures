@model IEnumerable<Product>
@{ 
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-sm-end">Id</th>
        <th>Name</th>
        <th class="text-sm-end">Price</th>
        <th class="text-sm-center">Actions</th>
    </tr>
    @foreach (Product product in Model)
    {
<tr>
    <td class="text-sm-end">@product.ProductID</td>
    <td>@product.Name</td>
    <td class="text-sm-end">@product.Price.ToString("c")</td>
    <td class="text-sm-center">
        <form asp-action="Delete" method="post">
            <input type="hidden" name="ProductId" value="@product.ProductID" />
            <a asp-action="Edit" asp-route-productId="@product.ProductID" class="btn btn-sm btn-warning">Edit</a>

            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>

    </td>
</tr>
    }
</table>

<div class="text-sm-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</div>